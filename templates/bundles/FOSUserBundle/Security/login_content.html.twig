{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/pages/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container" style="flex:1;">
        <div class="row">
            <div id="login-container" class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <img class="profile-img" src="{{ asset('images/log-in-logo.png') }}"
                         alt="">
                    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <input type="text" id="username" name="_username" value="{{ last_username }}" autocomplete="username" class="form-control" placeholder="Email" required autofocus> <br/>
                        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="{{ 'security.login.password'|trans }}">
                        <a href="{{ path('fos_user_resetting_request') }}" class="pull-right need-help">{{ 'forgot.password'|trans }}</a><span class="clearfix"></span>
                        <br />
                        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /><br/>
                        <br/>
                    </form>

                    {% if error %}
                        <div class="invalid-feedback">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>
                <a id="create-new-account" href="{{ path('register_user') }}" class="text-center new-account">{{ 'register.message'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
