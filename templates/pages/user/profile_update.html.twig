{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/pages/user/profile_update.css') }}">
{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <script>alert({{ message|trans }})</script>
    {% endfor %}

    <div class="container" style="flex:1;">
        <div class="form-container">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.description) }}
            <div class="buttons-container">
                <button id="update-button">{{ 'update'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
