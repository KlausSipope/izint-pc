<div id="header" class="container">
    <div class="header clearfix">
        <div class="logo-container">
            <a href="#">
                <img id="logo" height="55" width="55" src="{{ asset('images/logo.png') }}"/>
                <h3 class="text-muted" style="display: inline; font-size: 25px;">IZINT</h3>
            </a>
        </div>

        <nav id="navigation-bar">
            <ul class="nav nav-pills pull-right">
                {% if is_granted('ROLE_USER') %}
                    <li role="presentation"><a href="{{ path('user_homepage', {id: app.user.id}) }}">{{ 'header.nav.home'|trans }}</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" onclick="void(0)">{{ 'header.nav.profile.label'|trans }}</a>
                        <ul class="dropdown-menu">
                            <li role="presentation"><a href="{{ path('fos_user_profile_show', {id: app.user.id}) }}">{{ 'header.nav.profile.show'|trans }}</a></li>
                            <li role="presentation"><a href="{{ path('user_update') }}">{{ 'header.nav.profile.edit'|trans }}</a></li>
                        </ul>
                    </li>
                    <li role="presentation"><a href="{{ path('contact') }}">{{ 'header.nav.contact'|trans }}</a></li>
                    <li role="presentation"><a href="{{ path('about') }}">{{ 'header.nav.about'|trans }}</a></li>
                    <li role="presentation"><a id="logout" href="{{ path('fos_user_security_logout') }}">{{ 'header.nav.logout'|trans }}</a></li>
                {% else %}
                    <li role="presentation"><a href="{{ path('fos_user_security_login') }}">{{ 'header.nav.login'|trans }}</a></li>
                    <li role="presentation"><a href="{{ path('contact') }}">{{ 'header.nav.contact'|trans }}</a></li>
                    <li role="presentation"><a href="{{ path('about') }}">{{ 'header.nav.about'|trans }}</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
